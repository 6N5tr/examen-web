
<% include ./comunes/header.ejs %>
<div class="container">


    <div class="row" style="padding-top: 100px">
        <div class="col-md-4"></div>
        <div class="col-md-4 border " id="contenido" >
            <h1 class="titulo">Tienda Registro: </h1>
            <!-- Modal Content -->
            <form action="/tienda/registrar" method="post">


                <label for="nombre"><b>Nombre de la Tienda</b></label>
