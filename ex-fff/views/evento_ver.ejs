<% include ./comunes/header.ejs %>
<div class="container">
    <div class="row" style="padding-top: 100px;">
        <div class="col-md-1"></div>
        <div class="col-md-10 border"  id="contenido" >

            <h1 class=""><%= evento.nombre %></h1>
            <!-- Modal Content -->
            <div class="row">
                <div class="col-md-4 ">
                    <h2 class="titulo">Detalles</h2>
                    <ul>
                        <li  class="list-group-item list-group-item-action " ><%= evento.nombre %></li>
                        <li  class="list-group-item list-group-item-action" ><strong>Fecha: </strong><%= evento.fecha %></li>
                        <li  class="list-group-item list-group-item-action"><strong>Latitud: </strong><%= evento.latitud %></li>
                        <li  class="list-group-item list-group-item-action"><strong>Longitud: </strong><%= evento.longitud %></li>

                    </ul>
                    <br/>

                </div>

                <div class="col-md-4 list-group">
                    <h2 class="titulo">Productos</h2>

                    <% evento.productos.forEach((producto)=>{ %>
                        <ul>
                            <li  class="list-group-item list-group-item-action active bg-dark "><strong><%= producto.nombreProducto %> <img style="width: 22%; position: relative; top: 1%; right: -45% " src="/<%= producto.nombreProducto %>.jpg" alt=""></strong></li>
                            <!--<li><img src="/<%= producto.nombreProducto %>.jpg" alt=""></li>-->
                            <li  class="list-group-item list-group-item-action "><strong>Nombre: </strong><%= producto.nombre %></li>
                            <li  class="list-group-item list-group-item-action "><strong>Descripcion: </strong><%= producto.descripcion %></li>
                            <li  class="list-group-item list-group-item-action "><strong>Precio: </strong><%= producto.precio %></li>
                        </ul>
                        <br>
                    <%})%>


                </div>

                <div class="col-md-4 ">
                    <h2 class="titulo">Localizacion del Evento</h2>
                    <div >
                        <iframe width="100%" class="animated zoomInLeft" height="400"
                                src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d50454.43880415382!2d-78.4760832!3d-0.1343488!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e1!3m2!1ses-419!2sec!4v1549524219494" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                        <br/></div><br />
                    <a href="/" style=" text-decoration: none">
                        <button class="btn btn-info btn-block btn-espaciado"
                        >Regresar</button>
                    </a>
                </div>


            </div>

        </div>
        <div class="col-md-1"></div>
    </div>

</div>

<% include ./comunes/librerias.ejs %>
<% include ./comunes/footer.ejs %>
